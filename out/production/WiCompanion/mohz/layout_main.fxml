<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mohz.Controller">
    <padding><Insets bottom="10" left="20" right="20" top="10" /></padding>

    <Text fill="#4a9e48" text="WiCompanion Server" GridPane.columnIndex="0" GridPane.columnSpan="6" GridPane.rowIndex="0">
      <font>
         <Font size="28.0" />
      </font>
    </Text>

    <Label text="IP:" GridPane.columnIndex="3" GridPane.rowIndex="0">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label fx:id="ipAddress" GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <Line endX="598.0" strokeWidth="2.0" GridPane.columnSpan="6" GridPane.rowIndex="2" />

    <Label text="Command interface:" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <Label fx:id="cmdInterfaceLabel" text="Loading..." textFill="#fb6800" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <Label text="Keyboard interface:" GridPane.columnIndex="2" GridPane.rowIndex="3">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <Label fx:id="keyboardInterfaceLabel" text="Loading..." textFill="#fb6800" GridPane.columnIndex="3" GridPane.rowIndex="3">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <Label text="Mouse interface:" GridPane.columnIndex="4" GridPane.rowIndex="3">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <Label fx:id="mouseInterfaceLabel" text="Loading..." textFill="#fb6800" GridPane.columnIndex="5" GridPane.rowIndex="3">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <Label text="Log:" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextArea fx:id="logText" editable="false" GridPane.columnIndex="0" GridPane.columnSpan="6" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
